<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" hint="COM_JGIVE_DONATIONS_SEARCH_FILTER_SUBMIT"
		label="COM_USERS_FILTER_SEARCH_DESC"
		class="js-stools-search-string" />

		<field name="campaign_type" type="list" label="COM_CONTENT_FILTER_PUBLISHED" description="COM_CONTENT_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();">
			<option value="">COM_JGIVE_FILTER_SELECT_TYPE</option>
			<option value="donation">COM_JGIVE_CAMPAIGN_TYPE_DONATION</option>
			<option value="investment">COM_JGIVE_CAMPAIGN_TYPE_INVESTMENT</option>
		</field>

		<field name="payment_status" type="list" label="COM_CONTENT_FILTER_PUBLISHED" description="COM_CONTENT_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();">
			<option value="-1">COM_JGIVE_APPROVAL_STATUS</option>
			<option value="P">COM_JGIVE_PENDING</option>
			<option value="C">COM_JGIVE_CONFIRMED</option>
			<option value="RF">COM_JGIVE_REFUND</option>
			<option value="E">COM_JGIVE_CANCELED</option>
			<option value="D">COM_JGIVE_DENIED</option>
		</field>

		<field
			name="campaign_category"
			type="sql"
			class="inputbox"
			onchange="this.form.submit();"
			label="COM_CONTENT_FILTER_PUBLISHED"
			sql_select="cat.*"
			sql_from="#__categories AS cat"
			sql_filter="extension"
			sql_default_extension="com_jgive"
			key_field="id"
			value_field="title">
			<option value="">JOPTION_SELECT_CATEGORY</option>
		</field>

		<field
			name="campaign"
			type="sql"
			class="inputbox"
			onchange="this.form.submit();"
			label="COM_CONTENT_FILTER_PUBLISHED"
			sql_select="c.*"
			sql_from="#__jg_campaigns AS c"
			key_field="id"
			value_field="title">
			<option value="">COM_JGIVE_SELECT_CAMPAIGN</option>
		</field>
		<field name="donor_type" type="list" label="COM_JGIVE_DONATION_DONOR_TYPE" description="COM_JGIVE_DONATION_DONOR_TYPE_DESC"
			onchange="this.form.submit();">
			<option value="">COM_JGIVE_DONATION_DONOR_TYPE</option>
			<option value="org">COM_JGIVE_DONATION_ORGANIZATION</option>
			<option value="ind">COM_JGIVE_DONATION_INDIVIDUAL</option>
		</field>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			class="input-mini"
			default="20"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
