<?xml version="1.0" encoding="utf-8"?>
<form class="form-validate">
	<fieldset>
		<field
			name="id"
			type="hidden"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			filter="integer"/>
		<field
			name="name"
			type="text"
			required="true"
			class="required validate-blankspace"
			label="COM_JGIVE_ORGANIZATION_NAME"
			description="COM_JGIVE_ORGANIZATION_NAME_TOOLTIP"
			hint="COM_JGIVE_ORGANIZATION_NAME_HINT"
			filter="string"
			maxlength="255"/>
		<field
			name="email"
			type="email"
			label="COM_JGIVE_ORGANIZATION_EMAIL"
			validate="email"
			description="COM_JGIVE_ORGANIZATION_EMAIL_TOOLTIP"
			hint="COM_JGIVE_COMMON_EMAIL_HINT"
			class="validate-email validate-blankspace"
			filter="string"
			maxlength="255"/>
		<field
			name="phone"
			type="text"
			validate="tel"
			label="COM_JGIVE_ORGANIZATION_PHONE"
			class="validate-blankspace"
			description="COM_JGIVE_ORGANIZATION_PHONE_TOOLTIP"
			hint="COM_JGIVE_COMMON_PHONE_HINT"
			filter="string"
			maxlength="20"/>
		<field
			name="taxnumber"
			label="COM_JGIVE_PAYMENTFORM_TAXNUMBER"
			description="COM_JGIVE_PAYMENTFORM_TAXNUMBER_TOOLTIP"
			hint="COM_JGIVE_PAYMENTFORM_TAXNUMBER"
			class="validate-blankspace"
			filter="string"
			maxlength="50"/>
		<field
			name="website"
			type="text"
			label="COM_JGIVE_WEBSITE"
			class="validate-blankspace"
			description="COM_JGIVE_WEBSITE_TOOLTIP"
			hint="COM_JGIVE_ORGANIZATION_WEBSITE_HINT"
			filter="string"
			maxlength="255"/>
		<field
			name="user_id"
			type="hidden"
			filter="integer"/>
		<field
			name="addr_line_1"
			type="textarea"
			label="COM_JGIVE_ORGANIZATION_ADDRESS1"
			class="validate-blankspace"
			description="COM_JGIVE_ORGANIZATION_ADDRESS1_TOOLTIP"
			hint="COM_JGIVE_ADDRESS_HINT"
			filter="string"
			rows="3"
			cols="50"/>
		<field
			name="addr_line_2"
			type="textarea"
			label="COM_JGIVE_ORGANIZATION_ADDRESS2"
			class="validate-blankspace"
			description="COM_JGIVE_ORGANIZATION_ADDRESS2_TOOLTIP"
			hint="COM_JGIVE_ADDRESS2_HINT"
			filter="string"
			rows="3"
			cols="50"/>
		<field
			name="country"
			type="list"
			label="COM_JGIVE_COUNTRY"
			description="COM_JGIVE_COUNTRY_TOOLTIP"
			filter="integer"/>
		<field 
			name="region" 
			type="list"  
			label="COM_JGIVE_REGION" 
			description="COM_JGIVE_REGION_TOOLTIP" 
			filter="integer">
			<option value="">COM_JGIVE_CAMPAIGN_FORM_LIST_SELECT_OPTION</option>
		</field>
		<field 
			name="city" 
			type="list" 
			label="COM_JGIVE_CITY" 
			description="COM_JGIVE_CITY_TOOLTIP" 
			filter="integer">
			<option value="">COM_JGIVE_CAMPAIGN_FORM_LIST_SELECT_OPTION</option>
		</field>
		<field
			name="other_city_check"
			type="checkbox"
			label="COM_JGIVE_OTHER_CITY"
			description="COM_JGIVE_OTHER_CITY_CHECKBOX_TOOLTIP"
			value="1"
			filter="integer"/>
		<field
			name="other_city_value"
			type="text"
			label="COM_JGIVE_CITY_VALUE"
			class="validate-blankspace"
			description="COM_JGIVE_OTHER_CITY_VALUE_TOOLTIP"
			hint="COM_JGIVE_ENTER_OTHER_CITY_VALUE_HINT"
			filter="string"/>
		<field
			name="zip"
			label="COM_JGIVE_ZIP"
			description="COM_JGIVE_ZIP_TOOLTIP"
			hint="COM_JGIVE_COMMON_ZIP_HINT"
			class="validate-blankspace"
			filter="string"
			maxlength="30"/>
		<field
			name="published"
			type="hidden"
			filter="integer"/>
		<field
			name="created_date"
			default="0000-00-00 00:00:00"
			type="hidden"
			filter="user_utc" />
		<field
			name="created_by"
			type="hidden"
			default="0"
			filter="INT" />
		<field
			name="modified_date"
			default="0000-00-00 00:00:00"
			type="hidden"
			filter="user_utc" />
		<field
			name="modified_by"
			type="hidden"
			default="0"
			filter="INT" />
		<field
			name="vendor_id"
			type="vendorslist"
			required="true"
			label="COM_JGIVE_FORM_LBL_ORGANIZATION_VENDOR"
			description="COM_JGIVE_FORM_DESC_ORGANIZATION_VENDOR"
			client="com_jgive"
			multiple="false"
			addfieldpath="/administrator/components/com_tjvendors/models/fields"
		/>
		<field
			name="create_user"
			type="checkbox"
			label="COM_JGIVE_ORGANIZATION_CREATEUSER"
			description="COM_JGIVE_ORGANIZATION_CREATEUSER_TOOLTIP"
			value="1"
			filter="integer"/>
		<field
			name="contact_person"
			type="text"
			class="validate-blankspace"
			label="COM_JGIVE_ORGANIZATION_CONTACT_PERSON"
			description="COM_JGIVE_ORGANIZATION_CONTACT_PERSON_TOOLTIP"
			hint="COM_JGIVE_ORGANIZATION_CONTACT_PERSON_HINT"
			filter="string"/>
		<field
			name="contact_id"
			type="text"
			filter="string"/>
		<field
			name="contact_name"
			type="text"
			class="typeahead"
			filter="string"/>
	</fieldset>
</form>
