<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" hint="COM_JGIVE_SEARCH_FILTER_SUBMIT"
		label="COM_USERS_FILTER_SEARCH_DESC"
		class="js-stools-search-string" />

		<field name="campaign_id" type="sql" class="inputbox" onchange="this.form.submit();"
		query="SELECT '' AS `id`, '- Please Select Campaign -' AS `title` UNION SELECT `id`, `title` FROM `#__jg_campaigns`" key_field="id" value_field="title"/>

		<field
			name="donor_type"
			type="list"
			label="COM_JGIVE_DONATION_DONOR_TYPE"
			description="COM_JGIVE_DONATION_DONOR_TYPE_DESC"
			onchange="this.form.submit();">
			<option value="">COM_JGIVE_DONATION_DONOR_TYPE</option>
			<option value="org">COM_JGIVE_DONATION_ORGANIZATION</option>
			<option value="ind">COM_JGIVE_DONATION_INDIVIDUAL</option>
		</field>
	</fields>
	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			class="input-mini"
			default="20"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
