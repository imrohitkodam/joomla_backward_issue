<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
		<field
			name="title"
			type="text"
			label="COM_JGIVE_REPORT_FORM_REPORT_TITLE_LABEL"
			description="COM_JGIVE_REPORT_FORM_REPORT_TITLE_DESC"
			required="true"
			default=""
			class="required"
			maxlength="255"/>

		<field
			name="description"
			type="editor"
			label="COM_JGIVE_REPORT_FORM_REPORT_DESCRIPTION_LABEL"
			description="COM_JGIVE_REPORT_FORM_REPORT_DESCRIPTION_DESC"
			required="true"
			default=""
			class="required"
			filter="safehtml" />

		<field
			name="image"
			type="file"
			label="COM_JGIVE_CAMPAIGN_FORM_DISPLAY_IMAGE"
			description="COM_JGIVE_CAMPAIGN_FORM_DISPLAY_IMAGE_DESC"
			onchange="tjMediaFile.validateFile(this,0,0)"
			menu_published="0"
			upload_directory="media/com_jgive"
			accept="image/jpeg,image/png,image/jpg,image/webp" />

		<field name="media_id" type="hidden" />
		<field name="media_id_old" type="hidden" />
    </fieldset>
</form>
