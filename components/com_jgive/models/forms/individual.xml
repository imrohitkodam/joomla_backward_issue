<?xml version="1.0" encoding="utf-8"?>
<form class="form-validate">
	<fieldset>
		<field
			name="id"
			type="hidden"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			filter="integer"/>
		<field
			name="vendor_id"
			type="hidden"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			filter="integer"/>

		<field
			name="first_name"
			type="text"
			required="true"
			class="required validate-blankspace"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_FIRST_NAME"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_FIRST_NAME"
			filter="string"
			maxlength="255"/>

		<field
			name="last_name"
			type="text"
			class="validate-blankspace"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_LAST_NAME"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_LAST_NAME"
			filter="string"
			maxlength="255"/>

		<field
			name="email"
			type="email"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_EMAIL"
			validate="email"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_EMAIL"
			class="validate-email"
			hint="COM_JGIVE_COMMON_EMAIL_HINT"
			filter="string"
			maxlength="255"/>

		<field
			name="phone"
			type="text"
			validate="tel"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_PHONE_NUMBER"
			class="validate-blankspace"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_PHONE_NUMBER"
			filter="string"
			maxlength="20"/>

		<field
			name="taxnumber"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_TAX_NUMBER"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_TAX_NUMBER"
			class="validate-blankspace"
			filter="string"
			maxlength="50"/>

		<field
			name="create_user"
			type="checkbox"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_CREATEUSER"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_CREATEUSER"
			value="1"
			filter="integer"/>

		<field
			name="user_id"
			type="hidden"
			filter="integer"/>

		<field
			name="addr_line_1"
			type="textarea"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_ADDRESS1"
			class="validate-blankspace"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_ADDRESS1"
			rows="3"
			cols="50"
			filter="string"/>

		<field
			name="addr_line_2"
			type="textarea"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_ADDRESS2"
			class="validate-blankspace"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_ADDRESS2"
			rows="3"
			cols="50"
			filter="string"/>

		<field
			name="country"
			type="list"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_COUNTRY"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_COUNTRY"
			filter="integer"/>
			
		<field
			name="region"
			type="list"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_REGION"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_REGION"
			filter="integer">
			<option value="">COM_JGIVE_CAMPAIGN_FORM_LIST_SELECT_OPTION</option>
		</field>

		<field
			name="city"
			type="list"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_CITY"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_CITY" filter="integer">
			<option value="">COM_JGIVE_CAMPAIGN_FORM_LIST_SELECT_OPTION</option>
		</field>

		<field
			name="other_city_check"
			type="checkbox"
			label="COM_JGIVE_OTHER_CITY"
			description="COM_JGIVE_OTHER_CITY_CHECKBOX_TOOLTIP"
			value="1"
			filter="integer"/>

		<field
			name="other_city_value"
			type="text"
			label="COM_JGIVE_CITY_VALUE"
			class="no-whitespace"
			description="COM_JGIVE_OTHER_CITY_VALUE_TOOLTIP"
			hint="COM_JGIVE_ENTER_OTHER_CITY_VALUE_HINT"
			filter="string"/>

		<field
			name="zip"
			label="COM_JGIVE_INDIVIDUAL_FORM_LBL_ZIP"
			description="COM_JGIVE_INDIVIDUAL_FORM_DESC_ZIP"
			class="no-whitespace"
			filter="string"
			maxlength="30"/>

		<field
			name="published"
			type="hidden"
			filter="integer"/>
		<field
			name="created_date"
			default="0000-00-00 00:00:00"
			type="hidden"
			filter="user_utc" />
		<field
			name="created_by"
			type="hidden"
			default="0"
			filter="INT" />
		<field
			name="modified_date"
			default="0000-00-00 00:00:00"
			type="hidden"
			filter="user_utc" />
		<field
			name="modified_by"
			type="hidden"
			default="0"
			filter="INT" />
	</fieldset>
</form>
