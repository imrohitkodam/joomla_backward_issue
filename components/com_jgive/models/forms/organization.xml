<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field
			name="id"
			type="hidden"
			readonly="true"
			class="readonly"
			description="JGLOBAL_FIELD_ID_DESC"
			filter="integer"/>
		<field
			name="name"
			type="text"
			required="true"
			class="required validate-blankspace"
			label="COM_JGIVE_ORGANIZATION_FORM_NAME"
			description="COM_JGIVE_ORGANIZATION_DESC_NAME"
			hint="COM_JGIVE_ORGANIZATION_HINT_NAME"
			filter="string"
			maxlength="255"/>
		<field
			name="email"
			type="email"
			label="COM_JGIVE_ORGANIZATION_FORM_EMAIL"
			validate="email"
			description="COM_JGIVE_ORGANIZATION_DESC_EMAIL"
			hint="COM_JGIVE_ORGANIZATION_HINT_EMAIL"
			class="validate-email validate-blankspace"
			filter="string"
			maxlength="255"/>
		<field
			name="phone"
			type="text"
			validate="tel"
			label="COM_JGIVE_ORGANIZATION_FORM_PHONE"
			class="validate-blankspace"
			description="COM_JGIVE_ORGANIZATION_DESC_PHONE"
			hint="COM_JGIVE_ORGANIZATION_HINT_PHONE"
			filter="string"
			maxlength="20"/>
		<field
			name="taxnumber"
			label="COM_JGIVE_ORGANIZATION_FORM_TAXNUMBER"
			description="COM_JGIVE_ORGANIZATION_DESC_TAXNUMBER"
			hint="COM_JGIVE_ORGANIZATION_HINT_TAXNUMBER"
			class="validate-blankspace"
			filter="string"
			maxlength="50"/>
		<field
			name="website"
			type="text"
			label="COM_JGIVE_ORGANIZATION_FORM_WEBSITE"
			class="validate-blankspace"
			description="COM_JGIVE_WEBSITE_TOOLTIP"
			hint="COM_JGIVE_ORGANIZATION_HINT_WEBSITE"
			filter="string"
			maxlength="255"/>
		<field
			name="user_id"
			type="hidden"
			filter="integer"/>
		<field
			name="addr_line_1"
			type="textarea"
			label="COM_JGIVE_ORGANIZATION_FORM_ADDRESS1"
			class="validate-blankspace"
			description="COM_JGIVE_ORGANIZATION_DESC_ADDRESS1"
			hint="COM_JGIVE_ORGANIZATION_HINT_ADDRESS1"
			filter="string"
			rows="3"
			cols="50"/>
		<field
			name="addr_line_2"
			type="textarea"
			label="COM_JGIVE_ORGANIZATION_FORM_ADDRESS2"
			class="validate-blankspace"
			description="COM_JGIVE_ORGANIZATION_DESC_ADDRESS2"
			hint="COM_JGIVE_ORGANIZATION_HINT_ADDRESS2"
			filter="string"
			rows="3"
			cols="50"/>
		<field
			name="country"
			type="list"
			label="COM_JGIVE_ORGANIZATION_FORM_COUNTRY"
			description="COM_JGIVE_ORGANIZATION_DESC_COUNTRY"
			filter="integer"/>
		<field 
			name="region" 
			type="list"  
			label="COM_JGIVE_ORGANIZATION_FORM_REGION" 
			description="COM_JGIVE_ORGANIZATION_DESC_REGION" 
			filter="integer" />
		<field 
			name="city" 
			type="list" 
			label="COM_JGIVE_CITY" 
			description="COM_JGIVE_CITY_TOOLTIP" 
			filter="integer" />
		<field
			name="other_city_check"
			type="checkbox"
			label="COM_JGIVE_ORGANIZATION_FORM_OTHER_CITY_CHECKBOX"
			description="COM_JGIVE_ORGANIZATION_DESC_OTHER_CITY_CHECKBOX"
			value="1"
			filter="integer"/>
		<field
			name="other_city_value"
			type="text"
			label="COM_JGIVE_ORGANIZATION_FORM_OTHER_CITY_VALUE"
			class="validate-blankspace"
			description="COM_JGIVE_ORGANIZATION_DESC_OTHER_CITY_VALUE"
			hint="COM_JGIVE_ORGANIZATION_HINT_OTHER_CITY_VALUE"
			filter="string"/>
		<field
			name="zip"
			label="COM_JGIVE_ORGANIZATION_FORM_ZIP"
			description="COM_JGIVE_ORGANIZATION_DESC_ZIP"
			hint="COM_JGIVE_ORGANIZATION_HINT_ZIP"
			class="validate-blankspace"
			filter="string"
			maxlength="30"/>
		<field
			name="published"
			type="hidden"
			filter="integer"/>
		<field
			name="created_date"
			default="0000-00-00 00:00:00"
			type="hidden"
			filter="user_utc" />
		<field
			name="created_by"
			type="hidden"
			default="0"
			filter="INT" />
		<field
			name="modified_date"
			default="0000-00-00 00:00:00"
			type="hidden"
			filter="user_utc" />
		<field
			name="modified_by"
			type="hidden"
			default="0"
			filter="INT" />
		<field
			name="vendor_id"
			type="hidden"
			default="0"
			filter="integer"/>
		<field
			name="create_user"
			type="checkbox"
			label="COM_JGIVE_ORGANIZATION_FORM_CREATEUSER"
			description="COM_JGIVE_ORGANIZATION_DESC_CREATEUSER"
			value="1"
			filter="integer"/>
		<field
			name="contact_person"
			type="text"
			class="validate-blankspace"
			label="COM_JGIVE_ORGANIZATION_FORM_CONTACT_PERSON"
			description="COM_JGIVE_ORGANIZATION_DESC_CONTACT_PERSON"
			hint="COM_JGIVE_ORGANIZATION_HINT_CONTACT_PERSON"
			filter="string"/>
		<field
			name="contact_id"
			type="text"
			filter="string"/>
		<field
			name="contact_name"
			type="text"
			class="typeahead"
			filter="string"/>
	</fieldset>
</form>
