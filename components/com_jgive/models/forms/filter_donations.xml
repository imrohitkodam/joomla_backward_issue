<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="filter">
		<field name="search" type="text" hint="COM_JGIVE_ALL_DONATIONS_SEARCH_FILTER_SUBMIT"
		label="COM_USERS_FILTER_SEARCH_DESC" description="COM_JGIVE_ALL_DONATIONS_SEARCH_FILTER_SUBMIT"
		class="js-stools-search-string" />

		<field name="status" class="form-select" type="list" label="COM_CONTENT_FILTER_PUBLISHED" description="COM_CONTENT_FILTER_PUBLISHED_DESC"
			onchange="this.form.submit();">
			<option value="">COM_JGIVE_APPROVAL_STATUS</option>
			<option value="P">COM_JGIVE_PENDING</option>
			<option value="C">COM_JGIVE_CONFIRMED</option>
			<option value="RF">COM_JGIVE_REFUND</option>
			<option value="E">COM_JGIVE_CANCELED</option>
			<option value="D">COM_JGIVE_DENIED</option>
		</field>

		<field name="donor_type" class="form-select" type="list" label="COM_JGIVE_DONATION_DONOR_TYPE" description="COM_JGIVE_DONATION_DONOR_TYPE_DESC"
			onchange="this.form.submit();">
			<option value="">COM_JGIVE_DONATION_DONOR_TYPE</option>
			<option value="org">COM_JGIVE_DONATION_ORGANIZATION</option>
			<option value="ind">COM_JGIVE_DONATION_INDIVIDUAL</option>
		</field>

		<field
			name="campaign_id"
			class="form-select"
			type="mycampaigns"
			onchange="this.form.submit();"
			multiple="false"
		/>
	</fields>

	<fields name="list">
		<field
			name="limit"
			type="limitbox"
			label="COM_CONTENT_LIST_LIMIT"
			description="COM_CONTENT_LIST_LIMIT_DESC"
			class="input-mini form-select"
			default="20"
			onchange="this.form.submit();"
		/>
	</fields>
</form>
